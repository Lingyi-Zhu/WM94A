<script>
    var url = "http://127.0.0.1:5000/api/restaurant"
    $.get(url).done(function (res) {
        var table = document.getElementById("restaurant-menu");
        var newContent = "";

        for (var key in res) {
            var line = res[key];
            newContent += "<tr>";
            newContent += "<td>" + line["name"] + "</td>";
            newContent += "<td>" + line["location"] + "</td>";
            newContent += "<td>" + line["type"] + "</td>";
            newContent += "<td>" + line["menu"] + "</td>";

            newContent += "</tr>";
        }

        // Clear the existing content of the table
        table.innerHTML = "";

        // Append the new content to the table
        table.innerHTML = newContent;
    }).fail(function (e) {
        console.log('error');
    })
</script>

