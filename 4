<script>
    // Function to open the modal
    function openModal() {
        var modal = document.getElementById("myModal");
        // Display the modal
        modal.style.display = "block";
    }

    // Function to close the modal
    function closeModal() {
        var modal = document.getElementById("myModal");
        // Hide the modal
        modal.style.display = "none";
    }

    function submitComments() {
        var restaurantListTextArea = document.getElementById("restaurantListTextArea");
        var restaurantValue = restaurantListTextArea.value;

        // Make a POST request to the backend
        fetch('http://127.0.0.1:5000/restaurant', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({ restaurant: restaurantValue }),
        })
        .then(response => response.json())
        .then(data => {
            // Handle the response from the server if needed
            console.log('Success:', data);
        })
        .catch((error) => {
            console.error('Error:', error);
        });

        // Close the modal after submission
        closeModal();
    }
</script>
<button onclick="openModal()">Show Menu</button>
<div id="myModal">
    <span onclick="closeModal()" style="cursor: pointer; float: right;">&times;</span>
    <h2>Restaurant Menu</h2>
    <p>This is your restaurant menu:</p>

    <!-- Add a text area for input -->
    <textarea id="restaurantListTextArea" placeholder="Enter new restaurant..."></textarea>

    <!-- Add a submit button -->
    <button onclick="submitComments()">Submit</button>

    <!-- Additional table for modal content will be dynamically generated here -->
    <table id="modal-menu">
    </table>
</div>

